  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^27.0.0",
    "electron-reloader": "^1.2.3",
    "prettier": "^3.6.2",
    "prettier-plugin-embed": "^0.5.0"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.14",
    "tailwindcss": "^4.1.14"
